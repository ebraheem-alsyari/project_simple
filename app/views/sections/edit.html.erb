
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="sections edit">
  <h2>Update Section</h2>

<%= form_for(@section) do |f| %>
<table summary="Section form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Page_ID</th>
        <td><%= f.text_field(:page_id) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
        <th>Content_type</th>
        <td>
        <%= f.radio_button(:content_type, 'text') %> Text
        <%= f.radio_button(:content_type, 'HTML') %> HTML
        </td>
      </tr>
      <tr>
        <th>Content</th>
        <td><%= f.text_area(:content, :size => '40Ã—40') %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.check_box(:visible) %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Update Section") %>
    </div>

  <% end %>
</div>